@model IEnumerable<ControleFinanceiroWeb.Models.Transacao>
@{
    ViewData["Title"] = "Início";
    var saldo = (decimal)ViewBag.Saldo;
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <h2 class="text-center mb-4">💰 Controle Financeiro</h2>

            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h4 class="text-center">
                        Saldo Atual:
                        <span class="@(saldo >= 0 ? "text-success" : "text-danger")">
                            @saldo.ToString("C")
                        </span>
                    </h4>

                    <form asp-action="Adicionar" method="post" class="mt-3">
                        @Html.AntiForgeryToken()
                        <div class="row g-3">
                            <div class="col-md-4">
                                <input name="descricao" class="form-control" placeholder="Descrição" required />
                            </div>
                            <div class="col-md-2">
                                <input name="valor" type="number" step="0.01" class="form-control" placeholder="Valor" required />
                            </div>
                            <div class="col-md-3">
                                <select name="tipo" class="form-select" required>
                                    <option value="Entrada">Entrada</option>
                                    <option value="Saída">Saída</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <input name="categoria" class="form-control" placeholder="Categoria" required />
                            </div>
                        </div>
                        <div class="d-grid gap-2 mt-3">
                            <button type="submit" class="btn btn-primary">Adicionar</button>
                        </div>
                    </form>
                </div>
            </div>

            <h4 class="mb-3">📋 Transações</h4>

            <table class="table table-hover table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>Descrição</th>
                        <th>Valor</th>
                        <th>Tipo</th>
                        <th>Categoria</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var t in Model)
                    {
                        <tr>
                            <td>@t.Id</td>
                            <td>@t.Descricao</td>
                            <td>@t.Valor.ToString("C")</td>
                            <td>@t.Tipo</td>
                            <td>
                                <a asp-action="TransacoesPor" asp-route-categoria="@t.Categoria">
                                    @t.Categoria
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="text-center mt-3">
                <a asp-action="PorCategoria" class="btn btn-outline-secondary">
                    Ver totais por categoria
                </a>

                <form asp-action="Limpar" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger ms-2"
                            onclick="return confirm('Tem certeza que deseja limpar todas as transações?');">
                        Limpar todas as transações
                    </button>
                </form>
            </div>

        </div>
    </div>
</div>
