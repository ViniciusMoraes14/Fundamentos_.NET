@model IEnumerable<ControleFinanceiroWeb.Models.Transacao>
@{
    var categoria = (string)ViewBag.Categoria;
    ViewData["Title"] = $"Transações - {categoria}";
}

<h2>Transações da categoria: @categoria</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Descrição</th>
            <th>Valor</th>
            <th>Tipo</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.Id</td>
                <td>@t.Descricao</td>
                <td>@t.Valor.ToString("C")</td>
                <td>@t.Tipo</td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a asp-action="PorCategoria">Voltar</a> |
    <a asp-action="Index">Início</a>
</p>
